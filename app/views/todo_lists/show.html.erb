<h1>List: <%= @todo_list.name %></h1>

<h4>List Description: <%= @todo_list.description %></h4>
<br />
<% if @todo_items.any? %>
	<ul>
		<% @todo_items.each do |todo_item| %>
			<li>
  			<%= link_to todo_item.name, edit_todo_list_todo_item_path(@todo_list, todo_item) %>
  		</li>
  	<% end %>
  </ul>
<% else %>
  <h3>No synrgys, please add one!</h3>
<% end %>

<%= link_to 'Add Items', new_todo_list_todo_item_path(@todo_list), class: "waves-effect waves-light btn green lighten-2" %>
<%= link_to 'Edit Synrgy', edit_todo_list_path, class: "waves-effect waves-light btn green lighten-2" %>
<%= link_to 'Delete Synrgy', todo_list_path(@todo_list), method: :delete, class: "waves-effect waves-light red lighten-1 btn", data: {confirm: 'Sure you want to delete this?'} %>
