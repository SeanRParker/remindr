<h1>All Synrgys</h1>

<% if @todo_lists.any? %>
	<ul>
		<% @todo_lists.each do |list| %>
			<li>
  			<%= link_to list.name, todo_list_path(list) %>
  		</li>
  	<% end %>
  </ul>
<% else %>
  <h3>No to do lists, please add one!</h3>
<% end %>


<%= link_to 'Create a Synrgy', new_todo_list_path, class: "waves-effect waves-light btn blue-grey lighten-2" %>
