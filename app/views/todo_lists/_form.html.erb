<%= form_for @todo_list do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name, autofocus: true %>

	<%= f.label :description %>
	<%= f.text_field :description %>

  <p>Checking complete autocompletes every item on your list.</p>
  <%= f.label :complete %>
	<%= f.check_box :complete %>

	<%= f.submit class: "waves-effect waves-light black btn" %>

<% end %>
